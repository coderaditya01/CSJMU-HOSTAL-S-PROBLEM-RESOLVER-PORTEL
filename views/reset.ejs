
  
    <div class="contain mb-2">
        <div class="navbar mt-4 navbar-dark bg-light justify-content-center border border-success" id="textarea">

            <h4 class="card-title font-weight-bold ">
                <h2 class="text-success ">Password Reset Page</h2>
            </h4>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body text-center">
                <h class="mb-3">
                    <img src="/assets/secure-icon.png" alt="icon" width="20%" />
                </h>
                
                <%- include ("./messages") %>
                <form action="/reset/<%= id %>"  method="POST">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                          value="<%= typeof password != 'undefined' ? password : '' %>" />
                      </div>
                      <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
                          value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                      </div>
                    <button type="submit" class="btn btn-success btn-block">Reset Password</button>
                </form>
                <p class="mt-4">
                    Remember your password? <a href="/login">Login</a>
                </p>
            </div>
        </div>
    </div>
   